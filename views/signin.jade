extends layout

block content
  
  nav.navbar.navbar-default
    .container-fluid
      ul.nav.navbar-nav.navbar-left
        li
          a(href='/')
            i.fa.fa-home(aria-hidden='true')   Strona główna
      ul.nav.navbar-nav.navbar-right
        li.dropdown
         a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
            i.fa.fa-cogs(aria-hidden='true')  Konto
            span.caret
          ul.dropdown-menu
            li
              a(href='/user/signup') 
                i.fa.fa-registered(aria-hidden='true')  Rejestracja
  .row
    .col-md-4.col-md-offset-4
      h1= title
      if hasErrors
        .alert.alert-danger
          each mess, i in messages
            p this
      form(action='/user/signin', method='post')
        .form-group
          label(for='email') E-Mail 
          input#email.form-control(type='text', name='email')
        .form-group
          label(for='haslo') Hasło 
          input#password.form-control(type='password', name='password')
        input(name='_csrf', value=csrfToken, type='hidden')
        button.btn.btn-primary(type='submit') Zaloguj
  
